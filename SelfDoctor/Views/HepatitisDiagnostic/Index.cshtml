@model IEnumerable<Selfdoctor.Application.Dtos.HepatitisDiagnostic.HepatitisDiagnosticListDto>

@{
    ViewData["Title"] = "Home Page";
}


<!--<link rel="stylesheet" href="~/css/hepatitis.css" />-->

<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createHepatitisDiagnostic">Nuevo Diagnostico</button>


@if (!string.IsNullOrEmpty(ViewBag.Prediction))
{
    <div class="alert alert-success" role="alert">
        <span>@ViewBag.Prediction</span>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.PredictionError))
{
    <div class="alert alert-danger" role="alert">
        <span>@ViewBag.PredictionError</span>
    </div>
}

<table class="table table-striped table-bordered table-responsive table-responsive-sm table-responsive-md table-responsive-lg">
    <thead>
        <tr>
            <td>Id</td>
            <td>Categoría</td>
            <td>Edad</td>
            <td>Género</td>
            <td>ALB</td>
            <td>ALP</td>
            <td>ALT</td>
            <td>AST</td>
            <td>BIL</td>
            <td>CHE</td>
            <td>CHOL</td>
            <td>CREA</td>
            <td>GGT</td>
            <td>PROT</td>
            <td>Fecha</td>
            <td>Comentario</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var diagnostic in Model)
        {
            <tr>
                <td>@diagnostic.Id</td>
                <td>@diagnostic.Category.Description</td>
                <td>@diagnostic.Age</td>
                <td>@diagnostic.Gender.Description</td>
                <td>@diagnostic.ALB</td>
                <td>@diagnostic.ALP</td>
                <td>@diagnostic.ALT</td>
                <td>@diagnostic.AST</td>
                <td>@diagnostic.BIL</td>
                <td>@diagnostic.CHE</td>
                <td>@diagnostic.CHOL</td>
                <td>@diagnostic.CREA</td>
                <td>@diagnostic.GGT</td>
                <td>@diagnostic.PROT</td>
                <td>@diagnostic.Date.ToString("dd/MM/yyyy")</td>
                <td>@diagnostic.Comment</td>
            </tr>
        }
    </tbody>
</table>


<script src="~/js/hepatitis.js"></script>
@await Html.PartialAsync("~/Views/Shared/Modals/HepatitisDiagnostic.cshtml", new Selfdoctor.Application.Dtos.HepatitisDiagnostic.HepatitisDiagnosticRequestDto())